# .env.example
# Copy to .env and fill in your values

# ======================
# AI Provider Keys
# ======================
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=ant-...

# Azure OpenAI (Optional)
AZURE_OPENAI_API_KEY=your-azure-key
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com
AZURE_DEPLOYMENT_NAME=gpt-4
AZURE_DEPLOYMENT_NAME_35=gpt-35-turbo
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# ======================
# Authentication
# ======================
KEYCLOAK_CLIENT_SECRET=your-keycloak-client-secret
KEYCLOAK_ADMIN_PASSWORD=admin123

# ======================
# Database & Search
# ======================
ELASTICSEARCH_API_KEY=your-es-api-key
ELASTICSEARCH_SECURITY_ENABLED=false
ELASTICSEARCH_VERIFY_CERTS=false
# If you already run Elasticsearch externally, set its URL here and Makefile will skip starting the local container
EXTERNAL_ELASTICSEARCH_URL=

# ======================
# Build & Registry
# ======================
REGISTRY=localhost:5000
VERSION=latest
PLATFORMS=linux/amd64,linux/arm64

# ======================
# OpenTelemetry
# ======================
OTEL_EXPORTER_OTLP_ENDPOINT=http://otel-collector:4317
ENVIRONMENT=development

# ======================
# Service URLs (Internal)
# ======================
AI_SERVICE_URL=http://ai-service:8000
DOC_SERVICE_URL=http://document-service:8001
CACHE_SERVICE_URL=http://cache-service:8002
VECTOR_SERVICE_URL=http://vector-service:8004
AUTH_SERVICE_URL=http://auth-service:8003